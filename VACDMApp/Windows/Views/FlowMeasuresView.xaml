<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="VACDMApp.Windows.Views.FlowMeasuresView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Loaded="ContentView_Loaded">
    <Grid>
        <RefreshView x:Name="FlowMeasuresRefreshView" Refreshing="RefreshView_Refreshing">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="2*" />
                    <RowDefinition Height="1*" />
                </Grid.RowDefinitions>

                <Grid Grid.Row="1">
                    <VerticalStackLayout x:Name="FlowMeasuresStackLayout" />
                </Grid>

            </Grid>
        </RefreshView>
    </Grid>
</ContentView>
