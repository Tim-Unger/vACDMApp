<?xml version="1.0" encoding="utf-8" ?>

<ContentPage
    x:Class="VACDMApp.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:mct="clr-namespace:CommunityToolkit.Maui.Behaviors;assembly=CommunityToolkit.Maui"
    xmlns:the49="https://schemas.the49.com/dotnet/2023/maui"
    Background="Black"
    Loaded="ContentPage_Loaded"
    Shell.TabBarBackgroundColor="#1c2836">

    <ContentPage.Behaviors>
        <mct:StatusBarBehavior StatusBarColor="#1c2836" />
    </ContentPage.Behaviors>
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="15*" />
                <RowDefinition Height="2*" />
            </Grid.RowDefinitions>

            <ScrollView x:Name="Mainview" Grid.Row="0" />

            <HorizontalStackLayout
                Grid.Row="3"
                Padding="0,10,0,0"
                Background="#232323">
                <VerticalStackLayout Padding="30,0,20,0" HorizontalOptions="End">
                    <ImageButton
                        x:Name="MyFlightButton"
                        Background="#232323"
                        Clicked="MyFlightButton_Clicked"
                        HeightRequest="40"
                        Source="plane.svg"
                        WidthRequest="40" />
                    <Label
                        FontAttributes="Bold"
                        HorizontalOptions="Center"
                        Text="My Flight"
                        TextColor="#FEFEFE" />
                </VerticalStackLayout>

                <VerticalStackLayout Padding="20,0,20,0" HorizontalOptions="Center">
                    <ImageButton
                        x:Name="AllFlights"
                        Clicked="AllFlights_Clicked"
                        HeightRequest="40"
                        Source="planes.svg"
                        WidthRequest="40" />

                    <Label
                        FontAttributes="Bold"
                        HorizontalOptions="Center"
                        Text="All Flights"
                        TextColor="#FEFEFE" />
                </VerticalStackLayout>

                <VerticalStackLayout Padding="20,0,20,0" HorizontalOptions="Center">
                    <ImageButton
                        x:Name="Settings"
                        Clicked="Settings_Clicked"
                        HeightRequest="40"
                        Source="settings.svg"
                        WidthRequest="40" />

                    <Label
                        FontAttributes="Bold"
                        HorizontalOptions="Center"
                        Text="Settings"
                        TextColor="#FEFEFE" />
                </VerticalStackLayout>

                <VerticalStackLayout Padding="20,0,30,0" HorizontalOptions="Center">
                    <ImageButton
                        x:Name="FlowMeasures"
                        Clicked="FlowMeasures_Clicked"
                        HeightRequest="40"
                        Source="flowmeasures.svg"
                        WidthRequest="40" />

                    <Label
                        FontAttributes="Bold"
                        HorizontalOptions="Center"
                        Text="Flow Measures"
                        TextColor="#FEFEFE" />
                </VerticalStackLayout>

            </HorizontalStackLayout>

            <!--<DatePicker x:Name="FlightsDatePicker" IsVisible="false"  />-->
        </Grid>
    </Grid>

</ContentPage>
