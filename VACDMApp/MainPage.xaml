<?xml version="1.0" encoding="utf-8" ?>

<ContentPage
    x:Class="VACDMApp.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:mct="clr-namespace:CommunityToolkit.Maui.Behaviors;assembly=CommunityToolkit.Maui"
    xmlns:the49="https://schemas.the49.com/dotnet/2023/maui"
    Background="Black"
    Loaded="ContentPage_Loaded"
    Shell.TabBarBackgroundColor="#1c2836">

    <ContentPage.Behaviors>
        <mct:StatusBarBehavior StatusBarColor="#1c2836" />
    </ContentPage.Behaviors>
    <ScrollView>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="15*" />
                <RowDefinition Height="2*" />
            </Grid.RowDefinitions>

            <SearchBar
                Grid.Row="0"
                Margin="5"
                BackgroundColor="#232323"
                TextColor="#FEFEFE" />

            <HorizontalStackLayout Grid.Row="1" HorizontalOptions="Center">
                <Button
                    x:Name="AirportsButton"
                    Margin="10,5,10,5"
                    Background="#232323"
                    Clicked="AirportsButton_Clicked"
                    FontAttributes="Bold"
                    Text="All Airports"
                    TextColor="#FEFEFE" />
                <Button
                    x:Name="DayButton"
                    Margin="10,5,10,5"
                    Background="#232323"
                    Clicked="DayButton_Clicked"
                    FontAttributes="Bold"
                    Text="Today"
                    TextColor="#FEFEFE" />
                <TimePicker
                    x:Name="FlightsTimePicker"
                    Margin="10,5,10,5"
                    Background="#232323"
                    FontAttributes="Bold"
                    IsVisible="true"
                    TextColor="#FEFEFE" />
                <Button
                    x:Name="TimeFormatButton"
                    Margin="10,5,10,5"
                    Background="#232323"
                    Clicked="TimeFormatButton_Clicked"
                    FontAttributes="Bold"
                    Text="UTC"
                    TextColor="#FEFEFE" />
            </HorizontalStackLayout>

            <ScrollView x:Name="Mainview" Grid.Row="2" />

            <HorizontalStackLayout Grid.Row="3" HorizontalOptions="CenterAndExpand">
                <Button
                    x:Name="MyFlightButton"
                    Margin="10"
                    Background="#232323"
                    Clicked="MyFlightButton_Clicked"
                    FontAttributes="Bold"
                    Text="My Flight"
                    TextColor="#FEFEFE" />
                <Button
                    x:Name="AllFlights"
                    Margin="10"
                    Background="#232323"
                    Clicked="AllFlights_Clicked"
                    FontAttributes="Bold"
                    Text="All Flights"
                    TextColor="#FEFEFE" />
                <Button
                    x:Name="Settings"
                    Margin="10"
                    Background="#232323"
                    Clicked="Settings_Clicked"
                    FontAttributes="Bold"
                    Text="Settings"
                    TextColor="#FEFEFE" />

                <Button
                    x:Name="FlowMeasures"
                    Margin="10"
                    Background="#232323"
                    Clicked="FlowMeasures_Clicked"
                    FontAttributes="Bold"
                    Text="Flow Measures"
                    TextColor="#FEFEFE" />
            </HorizontalStackLayout>

            <!--<DatePicker x:Name="FlightsDatePicker" IsVisible="false"  />-->
        </Grid>
    </ScrollView>

</ContentPage>
