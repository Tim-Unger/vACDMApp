<?xml version="1.0" encoding="utf-8" ?>

<ContentPage
    x:Class="VACDMApp.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:mct="clr-namespace:CommunityToolkit.Maui.Behaviors;assembly=CommunityToolkit.Maui"
    xmlns:the49="https://schemas.the49.com/dotnet/2023/maui"
    Title=""
    Background="Black"
    Loaded="ContentPage_Loaded"
    NavigationPage.HasNavigationBar="False"
    Shell.TabBarBackgroundColor="Black">

    <ContentPage.Behaviors>
        <mct:StatusBarBehavior StatusBarColor="Black" />
    </ContentPage.Behaviors>
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="15*" />
                <RowDefinition Height="2*" />
            </Grid.RowDefinitions>

            <ScrollView x:Name="Mainview" Grid.Row="0" />

            <HorizontalStackLayout
                Grid.Row="3"
                Padding="0,10,0,0"
                Background="#232323">
                <VerticalStackLayout Padding="20,0,20,0" HorizontalOptions="Center">
                    <Grid>
                        <VerticalStackLayout>
                            <Image
                                x:Name="MyFlightImage"
                                HeightRequest="40"
                                Source="plane_outline.svg"
                                WidthRequest="40" />
                            <Label
                                FontAttributes="Bold"
                                HorizontalOptions="Center"
                                Text="My Flights"
                                TextColor="#FEFEFE" />
                        </VerticalStackLayout>
                        <Button
                            x:Name="MyFlightButton"
                            Background="Transparent"
                            Clicked="MyFlightButton_Clicked" />
                    </Grid>

                </VerticalStackLayout>

                <VerticalStackLayout Padding="20,0,20,0" HorizontalOptions="Center">
                    <Grid>
                        <VerticalStackLayout>
                            <Image
                                x:Name="AllFlightsImage"
                                HeightRequest="40"
                                Source="planes.svg"
                                WidthRequest="40" />

                            <Label
                                FontAttributes="Bold"
                                HorizontalOptions="Center"
                                Text="All Flights"
                                TextColor="#FEFEFE" />
                        </VerticalStackLayout>

                        <Button
                            x:Name="AllFlightsButton"
                            BackgroundColor="Transparent"
                            Clicked="AllFlightsButton_Clicked" />
                    </Grid>

                </VerticalStackLayout>

                <VerticalStackLayout Padding="20,0,20,0" HorizontalOptions="Center">
                    <Grid>
                        <VerticalStackLayout>
                            <ImageButton
                                x:Name="FlowmeasuresImage"
                                HeightRequest="40"
                                Source="flowmeasures_outline.svg"
                                WidthRequest="40" />

                            <Label
                                FontAttributes="Bold"
                                HorizontalOptions="Center"
                                Text="Flow Measures"
                                TextColor="#FEFEFE" />
                        </VerticalStackLayout>

                        <Button
                            x:Name="FlowMeasuresButton"
                            BackgroundColor="Transparent"
                            Clicked="FlowMeasuresButton_Clicked" />
                    </Grid>

                </VerticalStackLayout>

                <VerticalStackLayout Padding="20,0,20,0" HorizontalOptions="Center">
                    <Grid>
                        <VerticalStackLayout>
                            <ImageButton
                                x:Name="SettingsImage"
                                HeightRequest="40"
                                Source="settings_outline.svg"
                                WidthRequest="40" />

                            <Label
                                FontAttributes="Bold"
                                HorizontalOptions="Center"
                                Text="Settings"
                                TextColor="#FEFEFE" />
                        </VerticalStackLayout>

                        <Button
                            x:Name="SettingsButton"
                            BackgroundColor="Transparent"
                            Clicked="SettingsButton_Clicked" />
                    </Grid>

                </VerticalStackLayout>
            </HorizontalStackLayout>

            <!--<DatePicker x:Name="FlightsDatePicker" IsVisible="false"  />-->
        </Grid>
    </Grid>

</ContentPage>
